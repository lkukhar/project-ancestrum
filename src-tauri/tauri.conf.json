{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ancestrum",
  "version": "0.1.0",
  "identifier": "com.ancestrum.app",
  "build": {
    "frontendDist": "../src-frontend/dist",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Ancestrum",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "app": {
      "all": true
    },
    "fs": {
      "all": true
    },
    "shell": {
      "all": true
    },
    "window": {
      "all": true
    }
  }
}
